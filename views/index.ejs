                <li><a href="#"><img class="small-img kosdaq-list on" src="http://assets.change.org/photos/9/uo/dt/cduodtsPMXsSEOL-1600x900-noPad.jpg?1434019403"></a></li>
                <li><a href="#"><img class="small-img unlisted-list on" src="http://pds.joins.com/news/component/newsis/201704/20/NISI20170420_0012922092_web.jpg" /></a></li>
-->


            </ul>
        </div>
    </div>

    <div id="bottom-bar">
        <div id="up-button">
            <img id="top-arrow" class="arrow" src="images/top-arrow.png">
            <img id="bottom-arrow" class="arrow" src="images/bottom-arrow.png">
        </div>
        <% for (var i = 0; i < corps.length; i++) { %>
            <div id="corp-<%= i %>" class="putter">
                <div class="putter-top">
                    <div class="company-name">
                        <div class="container-out">
                            <div class="container-in">
                                <span class="font-small">기업명</span><br/>
                                <spas class="font-big"><%= corps[i].corpname %></spas>
                            </div>
                        </div>
                    </div>
                    <div class="company-link">
                        <div class="container-out">
                            <div class="container-in">
                                <span class="font-small">홈페이지</span><br/>
                                <spas class="font-big"><a href="<%= 'http://'+corps[i].homepage %>"><%= corps[i].homepage %></a></spas>
                            </div>
                        </div>
                    </div>
                    <div class="assets">
                        <div class="container-out">
                            <div class="container-in">
                                <span class="font-small">자산</span><br/>
                                <spas class="font-big"><%= corps[i].finance.toLocaleString("ko-KR", {style: "currency", currency: "KRW"}) %></spas>
                            </div>
                        </div>
                    </div>
                    <div class="market">
                        <div class="container-out">
                            <div class="container-in">
                                <span class="font-small">시장종류</span><br/>
                                <spas class="font-big"><%= corps[i].market %></spas>
                            </div>
                        </div>
                    </div>
                    <div class="code">
                        <div class="container-out">
                            <div class="container-in">
                                <span class="font-small">종목코드</span><br/>
                                <spas class="font-big"><%= corps[i].strockcode %></spas>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="putter-bottom">
                    <div class="built-day">
                        <div class="container-out">
                            <div class="container-in">
                                <span class="font-small-down">설립연도</span><br/>
                                <spas class="font-big"><%= corps[i].year %></spas>
                            </div>
                        </div>
                    </div>
                    <div class="staff">
                        <div class="container-out">
                            <div class="container-in-down">
                                <span class="font-small">직원 수</span><br/>
                                <spas class="font-big"><%= corps[i].workers %></spas>
                            </div>
                        </div>
                    </div>
                    <div class="tel">
                        <div class="container-out">
                            <div class="container-in-down">
                                <span class="font-small">연락처</span><br/>
                                <spas class="font-big"><%= corps[i].phone %></spas>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
    <div id="null">
        <div class="unlisted"></div>
        <div class="code"></div>
    </div>

</body>
</html>
